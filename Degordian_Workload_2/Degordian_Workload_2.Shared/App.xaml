<Application x:Class="Degordian_Workload_2.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="using:Degordian_Workload_2.ViewModel"
             xmlns:local="using:Degordian_Workload_2">
  <Application.Resources>
        <ResourceDictionary>
            <viewModel:ViewModelLocator x:Key="Locator"/>
            <SolidColorBrush x:Key="ButtonDisabledBackgroundThemeBrush" Color="Gray" />
            <SolidColorBrush x:Key="ButtonPressedBackgroundThemeBrush" Color="YellowGreen" />
            <SolidColorBrush x:Key="ButtonPointerOverBackgroundThemeBrush" Color="GreenYellow" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/Definitions.xaml"/>
                <ResourceDictionary Source="/Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>